#include <stdio.h>
#include<string.h>

int main()
{
    int count=0;
    char str[100];
    char *ptr;
    printf("Enter any string : ");
    gets(str);
    ptr=&str;
    
    while (*ptr!='\0')
    {
        count++;
        ptr++;
    }
    
    printf("the string has %d characters.",count);
    return 0;
}
